@inherits LayoutComponentBase

<MudCard @onclick="ChangeCheckBox">
    <MudCardMedia Image="@pokemon.Image" Height="200" />
    <MudCheckBox @bind-Checked="@seen" Disabled="true" Label="@pokemon.Name">
    </MudCheckBox>
</MudCard>

@code {
    public bool seen { get; set; } = true;
    [Parameter] public Pokemon? pokemon { get; set; }

    private void ChangeCheckBox(){
        if(seen){
            seen=false;
        }else{
            seen=true;
        }
        StateHasChanged();
        UpdatePokemonList();
    }

